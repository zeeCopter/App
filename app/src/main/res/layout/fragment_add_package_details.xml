<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/pictureLL"
        android:layout_width="70dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drawable_red_circle"
        android:layout_height="70dp">
        <ImageView
            android:layout_width="40dp"
            android:background="@drawable/camera"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/addImageTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/pictureLL"
        android:layout_width="wrap_content"
        android:text="Add Image"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/addImageTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1"
                android:hint="Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_weight="1"
                android:hint="Dimension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:drawableRight="@drawable/ic_drop_down"
            android:hint="Fragility Value"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:hint="Drop Off Time"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:text="Next"
        android:layout_margin="10dp"
        android:textColor="@color/colorBlack"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content" />

</RelativeLayout>
