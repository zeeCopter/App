<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topPannelLL"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="18dp"
            android:background="@drawable/back_arrow"
            android:layout_marginLeft="15dp"
            android:layout_height="18dp" />
        <TextView
            android:id="@+id/backArrowTV"
            android:layout_width="wrap_content"
            android:text="Login"
            android:textSize="22sp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/firstHeadingTV"
        android:layout_below="@+id/topPannelLL"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorBlack"
        android:text="Enter your mobile number"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/secondHeadingTV"
        android:layout_below="@+id/firstHeadingTV"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Enter your mobile number, to create a acount for sign in"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/numberPanelLL"
        android:layout_margin = "10dp"
        android:layout_below="@+id/secondHeadingTV"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/pak_flag"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="30dp">
            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/triangle_drawable"
                android:rotation="180"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:text="+92"
            android:textColor="@color/colorBlack"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/numberET"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:background="@null"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:hint="3421234456"
            android:textSize="14sp"
            android:layout_height="30dp" />
    </LinearLayout>

    <ImageView
        android:layout_below="@+id/numberPanelLL"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:background="@color/colorBlack"
        android:layout_height="1dp" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/continueWithFbTV"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:textColor="@color/colorBlack"
        android:text="Continue"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content" />

</RelativeLayout>
